<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCompatDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:dialogCornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/iphoneThemePrimaryDark</item>
    </style>

    <!-- Search Text Style. -->
    <style name="SearchTextStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">#80FDFDFD</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>